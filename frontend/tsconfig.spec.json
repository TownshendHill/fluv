/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["jasmine"],
    "paths": {
      "@tokens/*": ["./tokens/*"],
      "@components/*": ["./src/app/components/*"],
      "@services/*": ["./src/app/services/*"],
      "@shared/*": ["./src/app/shared/*"],
      "@types/*": ["./src/app/types/*"],
      "@styles/*": ["./src/styles/*"]
    }
  },
  "include": ["src/**/*.spec.ts", "src/**/*.d.ts"]
}
